<div class="ui inverted large secondary menu" style="background-color: #4a69bb;">
  <div class="ui container">
    <div class="header item" id="top-nav">
      <a class="<%= current_page?(root_path) ? "active" : '' %> item" href="<%= root_path %>">
        Music
      </a>
    </div>
    <div class="right menu">
      <% if session[:user_id] %>
        <a class="item">
          About Us
        </a>
        <a class="<%= current_page?(logout_path) ? "active" : '' %> item" href="<%= logout_path %>">
          <i class="user circle icon"></i>
          Log Out
        </a>
      <% else %>
        <a class="<%= current_page?(login_path) ? "active" : '' %> item" href="<%= login_path %>">
          <i class="user circle icon"></i>
          Login
        </a>
      <% end %>
    </div>
  </div>
</div>