<body style="background-color:aquamarine;">

<div class="ui very centered padded text container segment">
  <h2>Sign Up</h2>
  <form class="ui form" <%= form_for @users do |user|%>
    <div class="eight wide required field ">
      <div class="required field">
          <%= user.label :email%>
          <div class="ui left icon input">
            <i class="envelope icon"></i>
            <%=user.email_field :email, required: true %>
          </div>
          </div>
          </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="eight wide required field ">
    <div class="required field">
      <%= user.label :Password%>
      <div class="ui left icon input">
        <i class="key icon"></i>
        <%= user.password_field :password, required: true%>
      </div>
    </div>
  </div>

  <div class="actions" id="center-button">
              <button class="ui blue button" type="submit" <%=user.submit %>Sign Up</button>
    <%#=user.submit :sumbit %>
  </div><%end%>
  </div>
  </form>

</div>
</body>




